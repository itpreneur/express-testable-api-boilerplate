{
  "name": "express-api-boilerplate",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Patrick Ferreira",
    "email": "paatrickferreira@gmail.com",
    "url": "https://github.com/patarkf"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "DEBUG=express-sequelize nodemon ./src/bin/www",
    "db:migrate": "sequelize db:migrate",
    "test": "npm run test:integration && npm run test:unit",
    "test:unit": "NODE_ENV=test _mocha --opts test/unit/mocha.opts test/unit",
    "test:integration": "NODE_ENV=test _mocha --opts test/integration/mocha.opts test/integration",
    "cover": "istanbul cover _mocha test",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --fix"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "lodash.omit": "^4.5.0",
    "morgan": "^1.7.0",
    "mysql": "^2.15.0",
    "sequelize": "^4.37.6",
    "sequelize-cli": "^4.0.0",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "expect.js": "^0.3.1",
    "husky": "^0.14.3",
    "istanbul": "^1.0.0-alpha.2",
    "lint-staged": "^7.1.0",
    "mocha": "^5.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.4",
    "supertest": "^3.0.0"
  }
}
